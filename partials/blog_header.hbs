<header class="hero hero-home">
  <div class="container fill-height">
    <div class="row fill-height">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 fill-height title-layout">
        <div class="align-block header-box">
          {{#if @blog.logo}}
            <a class="blog-image-container" href="{{@blog.url}}" id="blog-image">
              <img class="blog-image" src="{{@blog.logo}}" alt="{{@blog.title}}">
            </a>
          {{/if}}
          <h1>{{@blog.title}}</h1>
          <p>{{@blog.description}}</p>
        </div>
      </div>
    </div>
  </div>
</header>